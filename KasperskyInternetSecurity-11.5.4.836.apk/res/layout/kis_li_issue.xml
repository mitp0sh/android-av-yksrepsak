<?xml version="1.0" encoding="utf-8"?>
<LinearLayout a:orientation="vertical" a:layout_width="fill_parent" a:layout_height="wrap_content" style="@style/kis_li_issue"
  xmlns:a="http://schemas.android.com/apk/res/android">
    <RelativeLayout a:layout_width="fill_parent" a:layout_height="wrap_content">
        <ImageView a:id="@id/li_issue_icon_imageview" a:visibility="invisible" a:layout_alignParentLeft="true" style="@style/kis_li_issue_icon" />
        <ImageView a:id="@id/li_issue_more_imageview" a:visibility="invisible" a:layout_alignParentRight="true" style="@style/kis_li_issue_more" />
        <LinearLayout a:orientation="vertical" a:layout_width="fill_parent" a:layout_height="wrap_content" a:layout_toLeftOf="@id/li_issue_more_imageview" a:layout_toRightOf="@id/li_issue_icon_imageview">
            <RelativeLayout a:orientation="vertical" a:id="@id/li_issue_content" a:layout_width="fill_parent" a:layout_height="wrap_content">
                <TextView a:id="@id/li_issue_title_textview" style="@style/kis_li_issue_title" />
                <FrameLayout a:id="@id/li_issue_aux_framelayout" a:visibility="gone" a:layout_below="@id/li_issue_title_textview" a:layout_alignParentBottom="true" style="@style/kis_li_issue_aux" />
            </RelativeLayout>
            <LinearLayout a:orientation="vertical" a:id="@id/link" a:paddingBottom="5.0dip" a:visibility="gone" a:layout_width="fill_parent" a:layout_height="wrap_content" a:layout_marginTop="5.0dip">
                <ImageView a:layout_width="fill_parent" a:layout_height="3.0dip" a:src="@drawable/dotted_line" a:layerType="software" />
                <TextView a:textSize="14.0sp" a:textColor="@color/kis_li_issue_warning_indicator" a:paddingTop="5.0dip" a:paddingBottom="5.0dip" a:layout_width="fill_parent" a:layout_height="wrap_content" a:text="@string/kis_issues_premium_features_adv" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>