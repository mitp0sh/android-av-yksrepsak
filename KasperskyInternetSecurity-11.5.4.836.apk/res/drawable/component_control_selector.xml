<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="true" android:drawable="@drawable/tab_press">
        <shape>
            <stroke android:width="3.0dip" color="#00ff00" />
            <padding android:left="10.0dip" android:top="10.0dip" android:right="10.0dip" android:bottom="10.0dip" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true" android:drawable="@drawable/tab_press">
        <shape>
            <stroke android:width="3.0dip" color="#00ff00" />
            <padding android:left="10.0dip" android:top="10.0dip" android:right="10.0dip" android:bottom="10.0dip" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="false" android:drawable="@drawable/tab_hover">
        <shape>
            <gradient android:startColor="#ff1ea699" android:endColor="#ff077066" android:angle="270.0" android:centerColor="#ff066e64" />
            <stroke android:width="3.0dip" color="#00ff00" />
            <padding android:left="10.0dip" android:top="10.0dip" android:right="10.0dip" android:bottom="10.0dip" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="false" android:drawable="@drawable/tab_normal">
        <shape>
            <stroke android:width="3.0dip" color="#00ff00" />
            <padding android:left="10.0dip" android:top="10.0dip" android:right="10.0dip" android:bottom="10.0dip" />
        </shape>
    </item>
</selector>